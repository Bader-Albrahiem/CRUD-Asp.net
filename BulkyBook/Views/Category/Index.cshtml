@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
           <h2 class="text-white">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-patch-plus"></i> &nbsp Create New Category</a>
        </div>
       
    </div>
    <br/>

    @if (Model.Count() > 0)
    {
        <table class=" table table-dark table-bordered table-striped " style="width:100%">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Display Order</th>
                    <th>Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var list in Model)
                {
                    <tr >
                        <td width="50%">
                            @list.Name
                        </td>
                        <td width="30%">
                            @list.DisplayOrder
                        </td>
                        <td width="30%">
                            @list.CreatedDateTime
                        </td>
                        <td>
                            <div class="d-flex justify-content-between" role="group">
                                <a asp-action="Edit" asp-controller="Category" asp-route-id="@list.Id" class="btn btn-outline-info mx-2"><i class="bi bi-pencil-square"></i> &nbsp Edit</a>
                                <a asp-action="Delete" asp-controller="Category" asp-route-id="@list.Id" class="btn btn-outline-danger mx-2"><i class="bi bi-x-circle"></i> &nbsp Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2 class="text-white">No Category avaliable</h2>
    }
</div>
   



